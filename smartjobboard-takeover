id: smartjobboard-takeover

info:
  name: SmartJobBoard Subdomain Takeover
  author: Gaurang
  severity: high
  description: |
    Detects SmartJobBoard subdomains that are not configured.
  reference:
    - https://github.com/EdOverflow/can-i-take-over-xyz/issues/139
  tags: takeover,smartjobboard

http:
  - method: GET
    path:
      - "{{BaseURL}}"

    matchers-condition: and
    matchers:
      - type: dsl
        dsl:
          - Host != ip
          - contains_all(body, "This job board website is not available")
          - contains(content_type, "text/html")
        condition: and

    extractors:
      - type: dsl
        dsl:
          - cname
